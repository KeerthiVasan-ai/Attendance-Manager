<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:padding="24dp"
    tools:context=".insertingdata">


    <TextView
        android:id="@+id/inserttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Insert the Student Data"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#23A7F4"
        android:text="Insert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insertphone"
        app:layout_constraintVertical_bias="0.213" />

    <EditText
        android:id="@+id/insertname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_insert"
        android:textColorHint="@color/black"
        android:hint="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inserttitle"
        app:layout_constraintVertical_bias="0.178" />

    <EditText
        android:id="@+id/insertroll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="@color/black"
        android:hint="Roll Number"
        android:background="@drawable/border_insert"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insertname"
        app:layout_constraintVertical_bias="0.092" />

    <EditText
        android:id="@+id/insertphone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_insert"
        android:hint="Phone Number"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insertroll"
        app:layout_constraintVertical_bias="0.092" />


</androidx.constraintlayout.widget.ConstraintLayout>